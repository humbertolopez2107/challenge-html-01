    padding-left: .5em;
    font-family: 'Lato';
}
.container__element_1--image img {
    width: 100%;
    height: 80%;
    margin: 0px;
}
.container__element_1--image p {
    color:white;
font-family: 'oswald';
font-size: 12px;
padding-left: .5em;
padding-right: .5em;
display: flex;
justify-content: center;
align-items: center;
padding-top: .3em;
padding-left: 10px;
padding-bottom: .3em;
margin-top: -4em;
margin-left: -.3em;
background-color: #ff555b;
width: 6em;
height: 1.4em;
position: absolute;
letter-spacing: 1px;
